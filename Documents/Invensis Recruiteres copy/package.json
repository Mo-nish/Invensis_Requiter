{
  "name": "invensis-hiring-portal",
  "version": "1.0.0",
  "description": "Invensis Hiring Portal - Full Stack Application",
  "main": "index.js",
  "scripts": {
    "build": "cd client && npm install && npm run build",
    "start": "node index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-admin": "cd admin-portal/admin-server && npm install",
    "install-all": "npm run install-client && npm run install-server && npm run install-admin"
  },
  "keywords": [
    "react",
    "nodejs",
    "mongodb",
    "hiring",
    "portal"
  ],
  "author": "Invensis Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "nodemailer": "^7.0.5",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 