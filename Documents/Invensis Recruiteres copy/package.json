{
  "name": "invensis-recruiters",
  "version": "1.0.0",
  "description": "Invensis Hiring Portal",
  "main": "server/index.js",
  "scripts": {
    "prestart": "lsof -ti:5001 | xargs kill -9 2>/dev/null || true",
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../admin-portal/admin-server && npm install && cd ../admin-portal/admin-client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["hr", "recruitment", "manager", "candidates"],
  "author": "Invensis Company",
  "license": "MIT"
} 